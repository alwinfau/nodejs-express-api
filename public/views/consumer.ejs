<div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-2xl font-semibold mb-4">Daftar Konsumen</h2>
    <table class="min-w-full table-auto">
        <thead>
            <tr class="bg-gray-100">
                <th class="px-4 py-2">ID</th>
                <th class="px-4 py-2">Nama Konsumen</th>
                <th class="px-4 py-2">Email</th>
                <th class="px-4 py-2">Aksi</th>
            </tr>
        </thead>
        <tbody id="consumerList">
            <!-- Data konsumen akan dimuat di sini dengan JavaScript -->
        </tbody>
    </table>
</div>

<script>
    // Fetch data konsumen dari API
    fetch('/api/consumers')
        .then(response => response.json())
        .then(consumers => {
            const consumerList = document.getElementById('consumerList');
            consumers.forEach(consumer => {
                const tr = document.createElement('tr');
                tr.classList.add('border-b');
                tr.innerHTML = `
            <td class="px-4 py-2">${consumer.id}</td>
            <td class="px-4 py-2">${consumer.name}</td>
            <td class="px-4 py-2">${consumer.email}</td>
            <td class="px-4 py-2">
              <button class="text-blue-500">Edit</button>
              <button class="text-red-500">Delete</button>
            </td>
          `;
                consumerList.appendChild(tr);
            });
        })
        .catch(error => console.error('Error fetching consumers:', error));
</script>